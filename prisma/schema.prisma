generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String      @id @default(uuid())
  email       String      @unique
  firstName   String
  lastName    String
  password    String
  avatarImage String?
  games       Game[]
  bookmarks   Bookmark[]
}

model Game {
  id     String @id @default(uuid())
  name   String
  owners User[]
}

model Screening {
  id       String   @id @default(uuid())
  date     DateTime
  time     DateTime
  seats    ScreeningSeat[]
}

model Seat {
  id         String           @id @unique
  screenings ScreeningSeat[]
}

model ScreeningSeat {
  screeningId String
  seatId      String

  @@id([screeningId, seatId])

  screening Screening @relation(fields: [screeningId], references: [id])
  seat      Seat      @relation(fields: [seatId], references: [id])
}

model Bookmark {
  id      String @id @default(uuid())
  movieId String
  userId  String
  user    User   @relation(fields: [userId], references: [id])
  @@unique([movieId, userId])
}
